----------------------------------------------------------------------------------------------------------------------------
<input type="number" placeholder="enter your age">
    <button>click</button>


let input = document.querySelector('input')
let button = document.querySelector('button')

button.addEventListener('click', () => {

    let age = Number(input.value)
      
    if (age < 18) {
        alert('You are minor')
    } else {
        alert("You are adult")
    }
})
