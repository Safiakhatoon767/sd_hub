 <button class="btn">change_fruits</button>
      
let button = document.querySelector('.btn');


button.addEventListener('click', () => {
    let arr = ["apple", "banana", "mango", "papaya", "orange", "guava"];

    for (let i = 0; i < arr.length; i++) {
        console.log(arr[i]); // 
    }
});
