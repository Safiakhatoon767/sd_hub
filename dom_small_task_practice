    <button class="btn1">show_para</button>
    <button class="btn2">hide_para</button>



    let para = document.querySelector('p')

let show_para = document.querySelector('.btn1')

let hide_para = document.querySelector('.btn2')

show_para.addEventListener('click', () => {

    para.style.display = 'block';
})

hide_para.addEventListener('click', () => {
    para.style.display = 'none';
})
