 <input type="password" class="box" placeholder="enter your password">
    <button class="btn1">show</button>
    <button class="btn2">hide</button>

    let input_box = document.querySelector('.box');

let show_button = document.querySelector('.btn1');

let hide_button = document.querySelector('.btn2');

show_button.addEventListener('click', () => {
    input_box.type = "text"
})

hide_button.addEventListener('click', () => {
    input_box.type = "password"
})
